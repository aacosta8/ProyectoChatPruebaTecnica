@model List<ChatWebPruebaTecnica.Models.Requests.Room>
@{
    ViewBag.Title = "Lobby";
}

<h2>@ViewBag.Title</h2>

<div class="row">

    <div class="col-md-12">
        @foreach (var room in Model)
        {
            <div>
                @room.Name<br />
                @room.Description<br />
                <div style="text-align:center;">
                    <input class="btn btn-success" type="button" value="Ir a la Sala" onclick="jsGo(@room.Id);" />
                </div>
            </div>
        }
    </div>

</div>

<script>
    function jsGo(idRoom) {
        document.location.href = "@Url.Content("~/chat/messages/")" + "?id=" + idRoom;
    }
</script>
